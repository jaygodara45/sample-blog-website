<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <script src="https://cdn.tailwindcss.com"></script>

    <title>Blog app</title>
  </head>
  <body>
    <div
      class="w-full h-auto p-5 text-blue-800 flex flex-col items-center gap-10"
    >
      <div class="h-16 w-full flex justify-between items-center p-5">
        <div class="flex gap-5">
          <div class="w-9 h-9 rounded-md mt-1">
            <img class="w-full h-full object-cover" src="/images/uploads/<%= user.pic %>" alt="">
            <!-- <h1><%= user.pic %></h1> -->
          </div>
          <a class="bg-blue-800 p-1 text-white rounded-md mt-1" href="/profileupload">Edit</a>
          <h3 class="font-semibold text-3xl"><%= user.name%></h3>
        </div>
        
       
        <button
          class="bg-red-800 text-white min-w-32 h-12 w-auto rounded-md text-lg"
        >
          <a href="/logout">Logout</a>
        </button>

        
      </div>

      <div
        class="w-1/2 h-2/3 border-2 border-gray-200 rounded-md flex flex-col items-center gap-5 p-5"
      >
        <h3 class="text-xl text-blue-800 font-semibold">Create a new post</h3>
        <form class="w-full px-3 h-full" method="post" action="/post">
          <textarea
            placeholder="Whats on your mind?"
            name="details"
            class="text-gray-700 w-full h-3/4 resize-none bg-transparent border-2 border-gray-200 rounded-md outline-none p-3"
          ></textarea>
          <input
            type="submit"
            value="Create"
            class="p-3 h-12 w-full bg-blue-800 text-white rounded-md mt-3 cursor-pointer"
          />
        </form>
      </div>

      <div
        class="posts w-full min-h-96 h-auto text-center p-5 mb-5 rounded-md"
      >
        <div  class="flex justify-center mb-5">
          
        </div>
        <h3 class="text-xl font-semibold">See your posts</h3>
        <div class="post-container mt-5 flex flex-wrap gap-3 justify-center">
          
            <% user.posts.reverse().forEach(function(post){%>
              <div class="w-2/5 h-42 border-2 border-gray-200 rounded-md px-2 py-3">
                <h4 class="text-blue-400 mb-2"> <%= user.username %> </h4>
                <p class="tracking-tight text-sm">
                  <%= post.content %> <br>
                  <!-- <p class="text-sm">Created on <%= post.date.getDate() %> - <%= post.date.getMonth() %> - <%= post.date.getFullYear() %> </p> -->
                  
                </p>
                
                <div class="btns flex gap-4">
                  <div class="flex">
                    <p class="p-2 text-black"> <%= post.likes.length %> like </p>
                  <a class="p-2 text-blue-500" href="/like/<%= post._id %>"> <%= post.likes.indexOf(user._id)===-1 ? "Like" : "Unlike" %></a>
                  </div>
                  
                  <a class="p-2 text-gray-600" href="/edit/<%= post._id %>">Edit</a>
                </div>
             </div>

            <%}) %>
          </div>
        </div>
      </div>
    </div>
  </body>
</html>
